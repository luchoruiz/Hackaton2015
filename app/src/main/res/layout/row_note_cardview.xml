<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_min_margin"
    android:layout_gravity="center"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="3dp">">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:padding="@dimen/activity_horizontal_min_margin"
        android:layout_marginTop="1dp"
        android:paddingBottom="9dp"
        android:paddingTop="9dp">


        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/headerLayout"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgNote"
                style="@style/note_image_style"
                android:adjustViewBounds="true"
                android:background="@android:color/white"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#66000000"
                android:maxLines="4"
                android:layout_gravity="bottom|left"
                android:padding="@dimen/activity_horizontal_margin"
                android:textColor="@android:color/white"
                android:textSize="@dimen/abc_text_size_headline_material" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/headerLayout"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin_double"
            android:id="@+id/txtBajada" />


    </RelativeLayout>


